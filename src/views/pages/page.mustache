{{>components/header}}

{{#banner}}
    <section class="banner" style="background-image: url('/assets/images/{{ image }}')">
        {{ title }}
    </section>
    <h2>{{ title }} disponíveis para adoção</h2>
{{/banner}}

<div class="container list">
    {{#list}}
        <div class="item">
            <img src="/assets/images/{{ image }}" class="item--image" />
            <div class="item--name">{{ name }}</div>
            <div class="item--color">Cor: {{ color }}</div>
            <div class="item--genre">Gênero: {{ sex }}</div>
        </div>
    {{/list}}
</div>

{{^list}}
    <div class="container no-list">
        <h2>Nenhum resultado encontrado</h2>
    </div>
{{/list}}

{{>components/footer}}